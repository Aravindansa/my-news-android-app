<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        app:cardElevation="3dp"
        app:strokeColor="@color/purple_200"
        app:strokeWidth="1dp"
        app:cardCornerRadius="15dp"
        android:layout_marginHorizontal="@dimen/horizontal_space"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:orientation="vertical"
            android:paddingVertical="10dp"
            android:paddingHorizontal="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                tools:text="Chennai, TamilNadu, India"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/tvLocation"
                android:layout_gravity="center"
                android:textSize="@dimen/mid_large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="@string/air_quality"
                android:textColor="@color/black"
                android:textSize="@dimen/small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/viewAirIndexIndicator"
                    android:layout_width="15dp"
                    android:background="@drawable/circle_shape"
                    android:layout_height="15dp"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginStart="5dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/tvAirQuality"
                    android:textSize="@dimen/medium"
                    tools:text="Good"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.card.MaterialCardView>
    <View
        android:visibility="invisible"
        android:layout_marginVertical="10dp"
        android:background="@color/grey_light"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingBottom="10dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/horizontal_space"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="@dimen/mid_large"
            tools:text="Tue 05 | Day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvCondition"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDate"
            tools:text="25â„ƒ" />
        <androidx.appcompat.widget.AppCompatImageView

            app:layout_constraintTop_toBottomOf="@id/tvDate"
            app:layout_constraintStart_toEndOf="@id/tvTemp"
            android:id="@+id/imgCurrentWeather"
            android:layout_marginStart="10dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            tools:srcCompat="@drawable/test1" />
        <androidx.appcompat.widget.LinearLayoutCompat
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatTextView
                android:drawablePadding="6dp"
                android:gravity="center"
                app:drawableStartCompat="@drawable/ic_rain"
                tools:text="13 mm"
                android:id="@+id/tvPercip"
                android:textColor="@color/black"
                android:textSize="@dimen/medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="5dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                app:drawableStartCompat="@drawable/ic_wind"
                tools:text="13 km/h"
                android:id="@+id/tvWind"
                android:textColor="@color/black"
                android:textSize="@dimen/medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="5dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                app:drawableStartCompat="@drawable/ic_humidity"
                tools:text="80%"
                android:id="@+id/tvHumidity"
                android:textColor="@color/black"
                android:textSize="@dimen/medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        <androidx.appcompat.widget.AppCompatTextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgCurrentWeather"
            android:id="@+id/tvCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            tools:text="Light rain shower"
            android:gravity="start"
            android:textColor="@color/black"
            android:textSize="@dimen/large" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
